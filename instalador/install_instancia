frontend_node_dependencies_modified() {
  print_banner
  printf "${WHITE} üíª Instalando depend√™ncias do frontend...${GRAY_LIGHT}"
  printf "\n\n"
  log "Instalando depend√™ncias do frontend"

  sleep 2

  # Primeiro, corrigir permiss√µes novamente para garantir
  sudo chown -R deploy:deploy /home/deploy/${instancia_add}/frontend
  sudo chmod -R 755 /home/deploy/${instancia_add}/frontend
  
  # Remover node_modules e package-lock.json se existirem para evitar problemas de permiss√£o
  sudo su - deploy <<EOF
  cd /home/deploy/${instancia_add}/frontend
  if [ -d "node_modules" ]; then
    rm -rf node_modules
  fi
  if [ -f "package-lock.json" ]; then
    rm -f package-lock.json
  fi
  
  # Limpar cache do npm
  npm cache clean --force >> "$LOG_FILE" 2>&1
  
  # Instalar depend√™ncias
  npm install --no-package-lock --force >> "$LOG_FILE" 2>&1
EOF

  if [ $? -ne 0 ]; then
    log_error "Falha ao instalar depend√™ncias do frontend"
    printf "${RED}Falha ao instalar depend√™ncias do frontend. Tentando abordagem alternativa...${NC}\n"
    
    # Tentar outra abordagem - usar sudo para o npm install
    sudo su -c "cd /home/deploy/${instancia_add}/frontend && npm install --no-package-lock --force" deploy >> "$LOG_FILE" 2>&1
    
    if [ $? -ne 0 ]; then
      log_error "Ainda n√£o foi poss√≠vel instalar depend√™ncias do frontend"
      printf "${RED}Ainda n√£o foi poss√≠vel instalar depend√™ncias do frontend. Verifique o log para mais detalhes.${NC}\n"
    else
      log "Depend√™ncias do frontend instaladas com sucesso (m√©todo alternativo)"
      printf "${GREEN}Depend√™ncias do frontend instaladas com sucesso (m√©todo alternativo)!${NC}\n"
    fi
  else
    log "Depend√™ncias do frontend instaladas com sucesso"
    printf "${GREEN}Depend√™ncias do frontend instaladas com sucesso!${NC}\n"
  fi

  sleep 2
}

frontend_node_build_modified() {
  print_banner
  printf "${WHITE} üíª Compilando o c√≥digo do frontend...${GRAY_LIGHT}"
  printf "\n\n"
  log "Compilando o c√≥digo do frontend"

  sleep 2

  # Garantir permiss√µes corretas
  sudo chown -R deploy:deploy /home/deploy/${instancia_add}/frontend
  sudo chmod -R 755 /home/deploy/${instancia_add}/frontend
  
  sudo su - deploy <<EOF
  cd /home/deploy/${instancia_add}/frontend
  
  # Verificar se a pasta build j√° existe e remov√™-la
  if [ -d "build" ]; then
    rm -rf build
  fi
  
  # Compilar com a flag CI=false para ignorar warnings como erros
  CI=false npm run build >> "$LOG_FILE" 2>&1
EOF

  if [ $? -ne 0 ]; then
    log_error "Falha ao compilar o c√≥digo do frontend"
    printf "${RED}Falha ao compilar o c√≥digo do frontend. Tentando abordagem alternativa...${NC}\n"
    
    # Tentar outra abordagem - usar sudo
    sudo -u deploy bash -c "cd /home/deploy/${instancia_add}/frontend && CI=false npm run build" >> "$LOG_FILE" 2>&1
    
    if [ $? -ne 0 ]; then
      log_error "Ainda n√£o foi poss√≠vel compilar o c√≥digo do frontend"
      printf "${RED}Ainda n√£o foi poss√≠vel compilar o c√≥digo do frontend. Vamos ignorar e continuar...${NC}\n"
      
      # Criar uma pasta build vazia para que o processo continue
      sudo mkdir -p /home/deploy/${instancia_add}/frontend/build
      sudo chown -R deploy:deploy /home/deploy/${instancia_add}/frontend/build
      
      # Criar um arquivo index.html b√°sico
      sudo su - deploy <<EOF
      cat > /home/deploy/${instancia_add}/frontend/build/index.html << 'END'
<!DOCTYPE html>
<html>
<head>
  <title>Atendechat - Em manuten√ß√£o</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
    h1 { color: #4CAF50; }
    p { color: #555; }
  </style>
</head>
<body>
  <h1>Atendechat</h1>
  <p>Sistema em manuten√ß√£o. Por favor, tente novamente mais tarde.</p>
</body>
</html>
END
EOF
      log "Criado frontend tempor√°rio de manuten√ß√£o"
      printf "${YELLOW}Criado frontend tempor√°rio de manuten√ß√£o. Voc√™ precisar√° compilar o frontend manualmente depois.${NC}\n"
    else
      log "C√≥digo do frontend compilado com sucesso (m√©todo alternativo)"
      printf "${GREEN}C√≥digo do frontend compilado com sucesso (m√©todo alternativo)!${NC}\n"
    fi
  else
    log "C√≥digo do frontend compilado com sucesso"
    printf "${GREEN}C√≥digo do frontend compilado com sucesso!${NC}\n"
  fi

  sleep 2
}

