# Fun√ß√µes para instalar depend√™ncias e construir o backend/frontend
backend_node_dependencies_modified() {
  print_banner
  printf "${WHITE} üíª Instalando depend√™ncias do backend...${GRAY_LIGHT}"
  printf "\n\n"
  log "Instalando depend√™ncias do backend"

  sleep 2

  sudo su - deploy <<EOF
  cd /home/deploy/${instancia_add}/backend
  
  # Verificar se √© necess√°rio instalar types adicionais
  if ! grep -q "@types/fs-extra" package.json; then
    echo "Adicionando @types/fs-extra √†s depend√™ncias de desenvolvimento" >> "$LOG_FILE"
    npm install --save-dev @types/fs-extra >> "$LOG_FILE" 2>&1
  fi
  
  # Verificar e instalar pacotes que podem estar causando problemas
  if grep -q "@whiskeysockets/baileys" package.json; then
    echo "Atualizando @whiskeysockets/baileys para vers√£o compat√≠vel" >> "$LOG_FILE"
    npm install @whiskeysockets/baileys@latest >> "$LOG_FILE" 2>&1
  fi
  
  # Instalar todas as depend√™ncias
  npm install --force >> "$LOG_FILE" 2>&1
EOF

  if [ $? -ne 0 ]; then
    log_error "Falha ao instalar depend√™ncias do backend"
    printf "${RED}Falha ao instalar depend√™ncias do backend. Tentando resolver problemas...${NC}\n"
    
    # Tentar resolver problemas comuns
    sudo su - deploy <<EOF
    cd /home/deploy/${instancia_add}/backend
    
    # Remover node_modules e reinstalar
    rm -rf node_modules
    rm -f package-lock.json
    npm cache clean --force >> "$LOG_FILE" 2>&1
    npm install --force >> "$LOG_FILE" 2>&1
EOF
    
    if [ $? -ne 0 ]; then
      log_error "Ainda n√£o foi poss√≠vel instalar depend√™ncias do backend ap√≥s tentativa de recupera√ß√£o"
      printf "${RED}Ainda n√£o foi poss√≠vel instalar depend√™ncias do backend. Verifique o log para mais detalhes.${NC}\n"
    else
      log "Depend√™ncias do backend instaladas com sucesso ap√≥s recupera√ß√£o"
      printf "${GREEN}Depend√™ncias do backend instaladas com sucesso ap√≥s recupera√ß√£o!${NC}\n"
    fi
  else
    log "Depend√™ncias do backend instaladas com sucesso"
    printf "${GREEN}Depend√™ncias do backend instaladas com sucesso!${NC}\n"
  fi

  sleep 2
}

